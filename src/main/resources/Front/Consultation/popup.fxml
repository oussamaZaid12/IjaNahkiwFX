<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="Controllers.Consultation.Popup"
           prefWidth="400" prefHeight="100"
           alignment="TOP_RIGHT"
           style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-background-radius: 10px; -fx-padding: 10px;">

    <!-- Notification Label -->
    <Label fx:id="notificationLabel" text="Vous avez une consultation dans 24h"
           StackPane.alignment="CENTER"
           style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px; -fx-font-size: 16px; -fx-background-radius: 5px;">
        <effect>
            <DropShadow radius="5" color="#000"/>
        </effect>
    </Label>

    <!-- Close Button -->
    <Button text="X" onAction="#close"
            StackPane.alignment="TOP_RIGHT"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px;"/>

</StackPane>
