<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="222.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Consultation.Carduser">
    <children>
        <VBox layoutX="5.0" prefHeight="219.0" prefWidth="592.0" spacing="5" styleClass="card-container">
            <children>
                <ImageView fx:id="imageuser" fitHeight="199.0" fitWidth="222.0" preserveRatio="true" />
                <Label fx:id="nom" styleClass="card-description" text="nom" />
                <Label fx:id="prenom" styleClass="card-description" text="prenom" />
                <Label fx:id="email" styleClass="card-description" text="email" />
                <Button fx:id="reserverConsultation" mnemonicParsing="false" onAction="#handleReserverConsultation" prefHeight="38.0" prefWidth="145.0" text="Reserver" textFill="#107191">
                    <font>
                        <Font name="Candara" size="20.0" />
                    </font>
                    <styleClass>
                        <String fx:value="label-like-button" />
                    </styleClass>
                </Button>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                    </children>
                </HBox>
                <!-- Add other details you want to display -->
            </children>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../../css/cardPub.css" />
        <URL value="@../../css/style.css" />
    </stylesheets>
</AnchorPane>