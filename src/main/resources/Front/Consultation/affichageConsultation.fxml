<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ConsultationPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Consultation.AffichageConsultation">
    <children>
        <ScrollPane layoutX="3.0" layoutY="25.0" prefHeight="718.0" prefWidth="1514.0">
            <padding>
                <Insets left="240.0" />
            </padding>
            <content>
                <VBox prefHeight="715.0" prefWidth="707.0">
                    <children>
                  <Button fx:id="ajout" mnemonicParsing="false" onAction="#ajoutcon" text="Ajouter Consultation" />
                  <Button fx:id="calend" mnemonicParsing="false" onAction="#ShowCalendar" text="Afficher Calendrier" />
                  <Button mnemonicParsing="false" onAction="#refreshConsultationsView" text="Consultations" />
                  <Button mnemonicParsing="false" onAction="#showDisplayFiches" text="Fiches" />
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="78.0" prefWidth="728.0" text="Liste Des Consultations" textFill="#4c8ea6">
                            <font>
                                <Font size="28.0" />
                            </font>
                        </Label>
                        <FlowPane fx:id="consultationscontainer" prefHeight="277.0" prefWidth="719.0" />
                  <Button fx:id="stat" mnemonicParsing="false" onAction="#showstat" text="Statistiques" />
                    </children>
                </VBox>
            </content>
        </ScrollPane>
        <VBox layoutX="963.0" layoutY="25.0" prefHeight="55.0" prefWidth="468.0">
            <children>
                <HBox alignment="TOP_RIGHT" prefHeight="31.0" prefWidth="728.0">
                    <children>
                        <TextField fx:id="searchField" prefHeight="21.0" prefWidth="269.0" promptText="Search by title.." styleClass="round-layout" stylesheets="@../../css/style.css">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </TextField>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
