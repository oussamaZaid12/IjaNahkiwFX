<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane prefHeight="360.0" prefWidth="479.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../css/style.css" fx:controller="Controllers.Chatbot.Chatbit">
    <VBox spacing="5" alignment="TOP_LEFT">
        <ScrollPane fx:id="scrollPane"  prefHeight="300.0" prefWidth="479.0" fitToWidth="true">
            <VBox fx:id="messageContainer" spacing="5">
                <!-- Messages will be dynamically added here -->
            </VBox>
        </ScrollPane>
        <HBox alignment="CENTER">
            <TextField fx:id="messageField" onAction="#sendMessage" HBox.hgrow="ALWAYS" promptText="Type a message..." />
            <Button onAction="#sendMessage" text="Send" />
        </HBox>
    </VBox>
</AnchorPane>
