<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.FicheMedicale.Cardfiche">
    <children>
        <VBox layoutX="5" layoutY="5" prefHeight="478.0" prefWidth="655.0" spacing="5" styleClass="card-container">
            <children>
            <Label fx:id="tfid" prefHeight="20.0" prefWidth="72.0" styleClass="card-description" text="Id fiche" />
                <Label fx:id="tfidp" prefHeight="20.0" prefWidth="72.0" styleClass="card-description" text="Id patient" />
                <Label fx:id="tfidt" styleClass="card-description" text="Id therapeute" />
                <Label fx:id="tfdatecreation" styleClass="card-description" text="Date de creation" />
                <Label fx:id="tfdatemiseajour" styleClass="card-description" text="Date de derniere mise Ã  jour" />
