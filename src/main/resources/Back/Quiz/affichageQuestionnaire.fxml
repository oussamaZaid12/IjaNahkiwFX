<AnchorPane fx:id="mainContainerQUES" prefHeight="637.0" prefWidth="1419.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Quiz.AffichageQuestionnaireController">
    <ImageView fitHeight="727.0" fitWidth="1193.0" layoutX="99.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../images/display.jpeg" />
        </image>
    </ImageView>
    <VBox layoutX="143.0" layoutY="33.0" prefHeight="641.0" prefWidth="721.0">
      <children>
            <HBox alignment="TOP_RIGHT" prefHeight="31.0" prefWidth="728.0">
            <Label prefHeight="46.0" prefWidth="355.0" text="Liste des Questionnaire " textAlignment="RIGHT" textFill="#38a4cf">
               <font>
                  <Font size="31.0" />
               </font>
            </Label>
                <TextField fx:id="searchField" prefHeight="30.0" prefWidth="154.0" promptText="Search by title.." styleClass="round-layout" stylesheets="@../../css/style.css" />
            </HBox>
          <TableView fx:id="questionnairesTable" prefHeight="430.0" prefWidth="625.0" stylesheets="@../../css/style.css">
