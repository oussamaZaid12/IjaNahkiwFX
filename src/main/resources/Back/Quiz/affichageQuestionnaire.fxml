                      <cellValueFactory>
                     <PropertyValueFactory property="titleQuestionnaire" />
                  </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description">
                      <cellValueFactory>
                     <PropertyValueFactory property="description" />
                  </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date">
                      <cellValueFactory>
                     <PropertyValueFactory property="date" />
                  </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="User ID">
                      <cellValueFactory>
                     <PropertyValueFactory property="idUserId" />
                  </cellValueFactory>
                  </TableColumn>
              </columns>
          </TableView>
          <HBox spacing="10">
              <Button onAction="#handleEdit" text="Edit Selected" />
              <Button onAction="#handleDelete" text="Delete Selected" />
