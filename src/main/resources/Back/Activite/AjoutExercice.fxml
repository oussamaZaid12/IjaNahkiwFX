        <image>
            <Image url="@../../images/add.png" />
        </image>
    </ImageView>
    <VBox layoutX="508.0" layoutY="97.0" prefHeight="300.0" prefWidth="413.0" spacing="10">
        <Label styleClass="title" text="Add New Exercice" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font></Label>
        <TextField fx:id="tfNomCoach" promptText="Coach Name" styleClass="text-field" />
        <TextField fx:id="tfDuree" promptText="Duration" styleClass="text-field" />
        <Button onAction="#handleAddExercice" styleClass="card-button" stylesheets="@../../css/cardPub.css" text="Add Exercice" />
    </VBox>
</AnchorPane>
