<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Activite.AjoutExerciceController" styleClass="root">
    <ImageView fitHeight="755.0" fitWidth="1293.0" layoutX="-1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../images/add.jpeg" />
        </image>
    </ImageView>
    <VBox spacing="10" layoutX="20" layoutY="20">
        <Label text="Add New Exercice" styleClass="title"/>
        <TextField fx:id="tfNomCoach" promptText="Coach Name" styleClass="text-field"/>
        <TextField fx:id="tfDuree" promptText="Duration" styleClass="text-field"/>
        <Button text="Add Exercice" onAction="#handleAddExercice" styleClass="button"/>
    </VBox>
</AnchorPane>
