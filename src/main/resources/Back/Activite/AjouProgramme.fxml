<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Activite.AjoutProgrammeController" prefHeight="723.0" prefWidth="1323.0">
    <children>
        <ImageView fitHeight="755.0" fitWidth="1293.0" layoutX="-1.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../images/add.jpeg" />
            </image>
        </ImageView>
        <VBox spacing="10.0" layoutX="20" layoutY="20">
            <children>
                <GridPane hgap="10" vgap="10">
                    <children>
                        <Label text="Activity:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <ComboBox fx:id="cbActiviteId" GridPane.columnIndex="1" GridPane.rowIndex="0" minWidth="200"/>
                        <Label text="Exercise:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <ComboBox fx:id="cbExerciceId" GridPane.columnIndex="1" GridPane.rowIndex="1" minWidth="200"/>
                        <Label text="Location:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="tfLieu" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Purpose:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="tfBut" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <TextField fx:id="tfNomL" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <Label text="Image:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <TextField fx:id="tfImage" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    </children>
                </GridPane>
                <HBox spacing="15" alignment="center">
                    <children>
                        <Button text="Add Programme" onAction="#handleAddProgramme" style="-fx-background-color: #0073e6; -fx-text-fill: white; -fx-font-weight: bold;">
                            <padding>
                                <Insets top="5" right="10" bottom="5" left="10"/>
                            </padding>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
